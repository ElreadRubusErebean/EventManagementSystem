@model EventManagmentSystem.Models.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h3>Login</h3>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
<br />
<hr class="spacingLine-light"/>

<form asp-action ="Login" method="post">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" id="email" required>
    </div>

    <br />

    <div class="form-group">
        <label asp-for="Password">Passwort</label>
        <input asp-for="Password" type="password" class="form-control" id="password" required>
    </div>

    <br />

    <button id="login" type="submit" class="btn btn-primary">Einloggen</button>
</form>
