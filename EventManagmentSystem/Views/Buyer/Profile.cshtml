<h3>Mein Konto</h3>

<a asp-area="" asp-controller="Buyer" asp-action="Buyer_EventOverview" class="btn-primary">Meine Events</a>

<h4>Meine Daten</h4>

<section>
    <div id="persData" class="form-group">
        <label for="firstName">Vorname:</label>
        <input name="firstName" type="text" class="accDetailInputs" required readonly />
        <br/>
        <label for="lastName">Nachname</label>
        <input name="lastName" type="text" class="accDetailInputs" required readonly />
        <br/>
        <label for="email">E-Mail Adresse:</label>
        <input name="email" type="email" class="accDetailInputs" required readonly />
        <br/>
        <label for="password">Passwort</label>
        <input name="password" type="password" class="accDetailInputs" required readonly />
        <!--remove readonly on edit?-->

        <div id="buyerConfigBtns" class="justify-content-evenly">
            <button id="logoutBtn" class="btn-primary">logout</button>
            <button id="changeDetailsBtn" class="btn-primary">edit</button>
            <button id="deleteAccBtn" class="btn-primary">Konto löschen</button>
        </div>

    </div>
</section>