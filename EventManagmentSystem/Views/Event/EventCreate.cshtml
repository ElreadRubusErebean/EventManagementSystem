@model EventManagmentSystem.Models.ViewModel.EventViewModel

@{
    ViewData["Title"] = "Create Event";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<h1>Ein neues Event erstellen</h1>
<hr class="spacingLine-light" />

<form asp-action="Create" asp-controller="Event" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <dt class="col-sm-10">
        <label asp-for="Title" class="control-label">Titel des Events</label>
    </dt>
    <dd class="col-sm-12">
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </dd>
    <br />
    <dt class="col-sm-10">
        <label asp-for="Description" class="control-label">Beschreibe, worum es in dem Event geht</label>
    </dt>
    <dd class="col-sm-12">
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </dd>
    <br />
    <dt class="col-sm-10">
        <label asp-for="Date" class="control-label">Wähle das Datum und die Uhrzeit für das Event aus</label>
    </dt>
    <dd class="col-sm-12">
        <input asp-for="Date" class="form-control" type="datetime-local" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </dd>
    <br />
    <dt class="col-sm-10">
        <label asp-for="Price" class="control-label">Lege den Ticketpreis fest</label>
    </dt>
    <dd class="col-sm-12">
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </dd>
    <br />
    <dt class="col-sm-10">
        <label asp-for="AmountOfTickets" class="control-label">Gib die Anzahl der verfügbaren Tickets an</label>
    </dt>
    <dd class="col-sm-12">
        <input asp-for="AmountOfTickets" class="form-control" type="number" />
        <span asp-validation-for="AmountOfTickets" class="text-danger"></span>
    </dd>
    <hr class="spacingLine-light" />
    <div class="d-flex justify-content-end">
        <a asp-action="Index" asp-controller="Home" method="Get" class="mx-2">
            <button type="button" class="btn btn-danger">Abbrechen</button>
        </a>
        <button type="submit" value="Create" class="btn btn-success">Event erstellen</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
