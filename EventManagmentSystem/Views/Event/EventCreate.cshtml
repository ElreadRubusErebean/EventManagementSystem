@model EventManagmentSystem.Models.ViewModel.EventViewModel

@{
    ViewData["Title"] = "Create Event";
}

<h1>Schritt für Schritt zum neuen Event</h1>
<hr />

<form asp-action="Create" asp-controller="Event" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Title" class="control-label">Titel des Events</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="spacingDiv"></div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Beschreibe, worum es in dem Event geht</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="spacingDiv"></div>
    <div class="form-group">
        <label asp-for="Date" class="control-label">Wähle das Datum und die Uhrzeit für das Event aus</label>
    </dt>
    <dd class="col-sm-12">
        <input asp-for="Date" class="form-control" type="datetime-local" min="@DateTime.Now.ToString("yyyy-MM-ddThh:mm")"/>
        <span asp-validation-for="Date" class="text-danger"></span>
    </dd>
    <div class="spacingDiv"></div>
        <div class="d-grid w-100">
            <div class="row">
                <div class="form-group col">
                    <label asp-for="Price" class="control-label">Lege den Ticketpreis fest</label>
                    <input asp-for="Price" class="form-control" type="number" step="0.01" min="0.01" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                
                <div class="form-group col">
                    <label asp-for="AmountOfTickets" class="control-label">Gib die Anzahl der verfügbaren Tickets an</label>
                    <input asp-for="AmountOfTickets" class="form-control" type="number" min="1" />
                    <span asp-validation-for="AmountOfTickets" class="text-danger"></span>
                </div>
            </div>
        </div>
    <div class="spacingDiv"></div>
    <div class="d-flex justify-content-end">
        <a asp-action="Index" asp-controller="Home" method="Get" class="mx-2">
            <button type="button" class="btn btn-danger">Abbrechen</button>
        </a>
        <button type="submit" value="Create" class="btn btn-success">Event erstellen</button>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
